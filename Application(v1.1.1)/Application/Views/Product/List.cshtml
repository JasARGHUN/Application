@model ProductsListViewModel

@*Блок с панелем пойска*@
<div class="navbar navbar-expand-lg justify-content-center">
    <form class="form-inline my-2 my-lg-0" method="get">
        <div>
            @Html.TextBox("name", Model.FilterViewModel.SelectedName, htmlAttributes: new { @class = "form-control" })
        </div>
        <input type="submit" value="Пойск" class="btn btn-secondary ml-2" />
    </form>
</div>

@foreach (var p in Model.Products)
{
    @await Html.PartialAsync("ProductSummary", p);
}

@*Пагинация*@
<div class="text-center">
    <hr />
    <h3><page-link page-model="Model.PagingInfo" page-action="List"></page-link></h3>
</div>