@model Product
@{
    ViewBag.Title = "Product Details";
    var photoPath = "~/Images/" + (Model.Image ?? "someProduct.jpg");
    var photoPath2 = "~/Images/" + (Model.Image2 ?? "someProduct.jpg");
    var photoPath3 = "~/Images/" + (Model.Image3 ?? "someProduct.jpg");
}

<div class="row justify-content-center" style="min-height:100vh;">
    <div class="col-sm-8">
        <form id="@Model.ProductID" asp-action="AddToCart"
              asp-controller="Cart" method="post">
            <input type="hidden" asp-for="@Model.ProductID" />
            <div class="card boxShadows">
                <div class="card-header text-center">
                    <h3>@Model.Name</h3>
                </div>

                <div class="card-body text-center">
                    <h4>Category: @Model.Category</h4>
                    <hr />
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="@photoPath" asp-append-version="true" class="d-block w-100 imageSize" alt="">
                            </div>
                            <div class="carousel-item">
                                <img src="@photoPath2" asp-append-version="true" class="d-block w-100 imageSize" alt="">
                            </div>
                            <div class="carousel-item">
                                <img src="@photoPath3" asp-append-version="true" class="d-block w-100 imageSize" alt="">
                            </div>
                        </div>
                        <h2 class="mt-2">
                            <span class="badge badge-warning" style="float:right">Price: @Model.Price</span>
                        </h2>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                    <br />
                    <hr />
                    <div class="card-text text-center">
                        <h4>Description:</h4>
                        <hr />
                        <p>@Model.Description</p>
                    </div>
                    <hr />
                </div>

                <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />

                <div class="m-1 text-center btn-block">
                    <a asp-action="List" asp-controller="Product" class="btn btn-warning m-1">Back</a>
                    <button type="submit"
                            class="btn btn-success m-1">
                        Add To Cart
                    </button>
                </div>
            </div>
            <br />
            <hr />

                    <br />
                    <div class="fb-comments" data-href="https://localhost:44388/product/details/@Model.ProductID" data-width="100%"
                         mobile="data-mobile" data-numposts="5"></div>

        </form>
    </div>
</div>

<div id="fb-root"></div>
<script async defer crossorigin="anonymous" src="https://connect.facebook.net/ru_RU/sdk.js#xfbml=1&version=v5.0"></script>